{
  "name": "xmlim",
  "version": "0.0.0",
  "description": "Generates diagrams of XML documents",
  "author": "William Wedler",
  "bin": {
    "xmlim": "./bin/run"
  },
  "homepage": "https://github.com/zflat/xmlim",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": "zflat/xmlim",
  "files": [
    "/bin",
    "/dist",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "dependencies": {
    "@oclif/core": "^2",
    "@oclif/plugin-help": "^5",
    "@oclif/plugin-plugins": "^2.4.0",
    "@rgrove/parse-xml": "^4.1.0",
    "nomnoml": "^1.5.3"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.10",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.18.14",
    "chai": "^4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^8.7.0",
    "mocha": "^9",
    "oclif": "^3",
    "prettier": "^2.8.4",
    "shx": "^0.3.3",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "oclif": {
    "bin": "xmlim",
    "dirname": "xmlim",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "gen": {
        "description": "Generate a diagram from the given XML file"
      },
      "watch": {
        "description": "Watch a file or directory for changes and re-generate a new diagram"
      },
      "watch file": {
        "description": "Watch the XML document and generates a new diagram when the file changes"
      },
      "watch dir": {
        "description": "Watch all *.xml documents in the directory and generate a new diagram when a file changes"
      }
    }
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "format": "npx prettier --write .",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": "https://github.com/zflat/xmlim/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts"
}
